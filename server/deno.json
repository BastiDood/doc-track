{
    "compilerOptions": {
        "noUncheckedIndexedAccess": true,
        "strict": true
    },
    "tasks": {
        "init": "initdb -D data -U postgres -W",
        "schema": "psql -U postgres -W -f db/init.sql",
        "db": "postgres -D data",
        "start": "deno run --allow-env --allow-net src/main.ts",
        "test": "deno test --allow-env --allow-net"
    },
    "fmt": {
        "options": {
            "lineWidth": 120,
            "indentWidth": 4,
            "singleQuote": true,
            "semiColons": true
        }
    },
    "imports": {
        "asserts": "https://deno.land/std@0.176.0/testing/asserts.ts",
        "base64url": "https://deno.land/std@0.176.0/encoding/base64url.ts",
        "cookie": "https://deno.land/std@0.176.0/http/cookie.ts",
        "hex": "https://deno.land/std@0.176.0/encoding/hex.ts",
        "http": "https://deno.land/std@0.176.0/http/http_status.ts",
        "postgres": "https://deno.land/x/postgres@v0.17.0/mod.ts",
        "uuid": "https://deno.land/std@0.176.0/uuid/v4.ts",
        "zod": "https://deno.land/x/zod@v3.20.2/mod.ts"
    }
}
